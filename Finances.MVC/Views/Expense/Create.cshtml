<div class="row">
    <div class="col-md-4">
        <form action="/Expense/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" for="Value">Value</label>
                <input type="text" class="form-control" id="Value" name="Value" />
            </div>

