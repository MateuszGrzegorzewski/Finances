@using Finances.Application.Expense

@model ExpenseDto

<h1>Add expense</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/Expense/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Value">Value</label>
                <input type="number" class="form-control" asp-for="Value" />
                <span class="text-danger" asp-validation-for="Value"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Category">Category</label>
                <input type="text" class="form-control" asp-for="Category" />
                <span class="text-danger" asp-validation-for="Category"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="CreatedAt">Date</label>
                <input type="date" class="form-control" asp-for="CreatedAt" />
            </div> 

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Description">Description</label>
                <input type="text" class="form-control" asp-for="Description" />
            </div>

            <div class="form-group md-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
