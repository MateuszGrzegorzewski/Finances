@model Finances.Application.Expense.ExpenseDto

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h3>Are you sure you want to delete this?</h3>

    <div class="card mt-3 mb-3">
        <h5 class="card-header">Expense Details</h5>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Value:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Value)</dd>

                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>

                <dt class="col-sm-3">Created At:</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy")</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
