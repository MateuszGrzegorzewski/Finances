@model IEnumerable<Finances.Application.Expense.ExpenseDto>

@{
    ViewData["Title"] = "Expenses";
}

<h1>Expenses</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-secondary">Add expense</a>
</p>

<div>
    <form asp-controller="Expense" asp-action="Index" method="get">
        <label for="targetYear">Enter Target Year:</label>
        <input type="text" id="targetYear" name="targetYear" placeholder="YYYY" />
        <button type="submit" class="btn btn-outline-primary">Calculate Total Expenses</button>
    </form>
    <p>Total expenses in specific year: @ViewBag.TotalExpensesForYear</p>

    <form asp-controller="Expense" asp-action="Index" method="get">
        <label for="targetNumOfMonths">Enter number of last months:</label>
        <input type="text" id="targetNumOfMonths" name="targetNumOfMonths" placeholder="X" />
        <button type="submit" class="btn btn-outline-primary">Calculate Total Expenses</button>
    </form>
    <p>Total expenses by specific last months: @ViewBag.TotalExpensesForLastMonths</p>

    <form asp-controller="Expense" asp-action="Index" method="get">
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="startDate" />
        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" name="endDate" />
        <button type="submit" class="btn btn-outline-primary">Calculate Total Expenses</button>
    </form>
    <p>Total expenses for specific term: @ViewBag.TotalExpensesForTerm</p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@item.Category</li>
                <li class="list-group-item">@item.Value</li>
            </ul>
            <div class="card-body">
                <a class="btn btn-primary" asp-controller="Expense" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-outline-primary" asp-controller="Expense" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>