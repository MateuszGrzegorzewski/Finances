@model Finances.Application.Expense.Commands.EditExpense.EditExpenseCommand

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" type="number" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Category" class="control-label"></label>
                <div class="d-flex align-items-center gap-2">
                    <select class="form-control" asp-for="Category">
                        <option value="">-- Select Category --</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Name">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                    <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary" title="Add category">+</a>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
